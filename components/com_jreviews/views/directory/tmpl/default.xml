<?xml version="1.0" encoding="utf-8" ?>
<metadata>
    <layout title="COM_JREVIEWS_DIRECTORY_VIEW_DEFAULT_TITLE">
            <![CDATA[COM_JREVIEWS_DIRECTORY_VIEW_DEFAULT_TITLE]]>
    </layout>

    <fields name="params">

        <fieldset name="basic" label="JReviews">

            <field name="action" type="hidden" label="JReviews Directory Menu" default="0" />

            <field name="dirid" type="directory" label="Directory"
                description="Optional to limit only to one directory"
                addfieldpath="/components/com_jreviews/views" />

            <field name="tmpl_suffix" type="text" size="20" default="" label="Theme suffix" description="Use a different theme for this menu by renaming the theme file using the suffix." />

        </fieldset>
        <fieldset name="overrides" label="JReviews Configuration Overrides">

            <field name="dir_overrides" type="radio" default="0" label="Enable Overrides" description="">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>

            <field name="dir_show_alphaindex" type="radio" default="1" label="Show alphaindex bar" description="">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>

            <field name="dir_cat_images" type="list" default="1" label="Show category images" description="">
                <option value="No">No</option>
                <option value="Above">Above category</option>
                <option value="Left">Left of category</option>
            </field>

            <field name="dir_columns" type="text" size="3" default="2" label="Number of columns" description="" />

            <field name="dir_cat_num_entries" type="radio" default="1" label="Show listing count" description="">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>

            <field name="dir_category_hide_empty" type="radio" default="0" label="Hide empty categories" description="">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>

            <field name="dir_category_levels" type="text" size="3" default="2" label="Category levels" description="" />

            <field name="dir_cat_format" type="list" default="1" label="Categories format" description="">
                <option value="0">Comma list</option>
                <option value="1">Bullet list</option>
            </field>

        </fieldset>

    </fields>

</metadata>