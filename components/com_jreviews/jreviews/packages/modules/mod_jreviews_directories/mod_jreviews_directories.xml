<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" version="2.5" method="upgrade">
	<name>JReviews Directories Module</name>
	<author>ClickFWD LLC</author>
	<creationDate>March 2013</creationDate>
	<copyright>Copyright (C) 2010-2013 ClickFWD LLC. All rights reserved.</copyright>
	<license>Commercial</license>
	<authorEmail>sales@reviewsforjoomla.com</authorEmail>
	<authorUrl>www.reviewsforjoomla.org</authorUrl>
	<version>2.4</version>
	<description>MODULE_HEADER</description>
	<files>
		<filename module="mod_jreviews_directories">mod_jreviews_directories.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_jreviews_directories.ini</language>
		<language tag="en-GB">en-GB.mod_jreviews_directories.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="tmpl_suffix" type="text" default="" label="JReviews Theme Suffix" description="" />
				<field name="dir_ids" type="text" default="" label="Directory IDs (optional)" description="Comma separated list of directory ids." />
				<field name="dir_links" type="radio" default="1" label="Show Directory Links" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field name="cachemode" type="hidden" default="static">
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>